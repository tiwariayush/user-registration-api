[flake8]
max-line-length = 100
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist

# Error codes to ignore
ignore = 
    E203,
    E501,
    W503,
    F401

# Error codes to always report
select = 
    E,     # pycodestyle errors
    W,     # pycodestyle warnings  
    F,     # pyflakes
    C,     # mccabe complexity
